                text-align: center;
            }

            .book-detail-image img {
                max-width: 250px;
                margin: 0 auto;
            }

            .book-detail-title {
                font-size: 2rem;
            }

            .book-detail-meta {
                justify-content: center;
            }

            .book-detail-actions {
                justify-content: center;
            }

            .admin-actions {
                justify-content: center;
                flex-direction: column;
                width: 100%;
            }

            .admin-actions .btn {
                width: 100%;
            }

            .review-header {
                flex-direction: column;
            }

            .add-review-card {
                padding: 1.5rem;
            }

            .reviews-section {
                padding: 1rem;
            }
        }
    </style>
</body>
</html>
