        }

        .add-review-title {
            color: #333;
            font-size: 1.3rem;
            margin-bottom: 1.5rem;
            font-weight: 600;
        }

        .review-form {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .review-form .form-label {
            font-weight: 600;
            color: #333;
        }

        .review-form .form-select,
        .review-form .form-control {
            border: 2px solid #e1e5e9;
            border-radius: 8px;
            padding: 0.8rem;
            transition: border-color 0.3s ease;
        }

        .review-form .form-select:focus,
        .review-form .form-control:focus {
            border-color: #3498db;
            box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.1);
        }

        .form-text {
            display: block;
            margin-top: 0.5rem;
            font-size: 0.85rem;
        }

        /* Bootstrap Validation Feedback */
        .needs-validation .valid-feedback {
            display: none;
            color: #28a745;
            font-weight: 500;
        }

        .needs-validation.was-validated .form-select:valid,
        .needs-validation.was-validated .form-control:valid {
            border-color: #28a745;
            background-image: none;
        }

        .needs-validation.was-validated .form-select:valid ~ .valid-feedback,
        .needs-validation.was-validated .form-control:valid ~ .valid-feedback {
            display: block;
        }

        .needs-validation .invalid-feedback {
            display: none;
            color: #dc3545;
            font-weight: 500;
        }

        .needs-validation.was-validated .form-select:invalid,
        .needs-validation.was-validated .form-control:invalid {
            border-color: #dc3545;
        }

        .needs-validation.was-validated .form-select:invalid ~ .invalid-feedback,
        .needs-validation.was-validated .form-control:invalid ~ .invalid-feedback {
            display: block;
        }

        .reviews-list {
            margin-top: 3rem;
        }

        .reviews-list h3 {
            color: #333;
            margin-bottom: 1.5rem;
            font-weight: 600;
        }

        .reviews-stats {
            background: white;
            padding: 1.5rem;
            border-radius: 8px;
            text-align: center;
        }

        .avg-rating {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 0.5rem;
        }

        .rating-value {
            font-size: 2.5rem;
            font-weight: bold;
            color: #f39c12;
        }

        .rating-stars {
            font-size: 1.5rem;
        }

        .rating-stars i.filled {
            color: #f39c12;
        }

        .rating-stars i:not(.filled) {
            color: #ddd;
        }

        .rating-text {
            font-size: 0.9rem;
            color: #666;
        }

        .review-item {
            background: white;
            padding: 1.5rem;
            border-radius: 8px;
            margin-bottom: 1rem;
