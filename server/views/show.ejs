<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= book.title %> - BookStore</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="nav-container">
                <div class="nav-logo">
                    <i class="fas fa-book"></i>
                    <span>BookStore</span>
                </div>
                <div class="nav-menu">
                    <a href="/" class="nav-link">Home</a>
                    <a href="/book/landing" class="nav-link">Books</a>
                </div>
                <div class="nav-auth">
                    <% if (typeof user !== 'undefined' && user) { %>
                        <span class="welcome-text">Welcome, <%= user.username || user.name %></span>
                        <% if (user.role === 'admin') { %>
                            <a href="/book/add" class="btn btn-admin">Add Book</a>
                            <a href="/book/manage" class="btn btn-admin">Manage Books</a>
                        <% } %>
                        <a href="/logout" class="btn btn-secondary">Logout</a>
                    <% } else { %>
                        <a href="/auth/login" class="btn btn-outline">Login</a>
                        <a href="/auth/register" class="btn btn-primary">Sign Up</a>
                    <% } %>
                </div>
            </div>
        </nav>
    </header>

    <main>
        <div class="container">
            <div class="book-detail">
                <div class="book-detail-header">
                    <a href="/book/landing" class="back-link">
                        <i class="fas fa-arrow-left"></i> Back to Books
                    </a>
                </div>

                <div class="book-detail-content">
                    <div class="book-detail-image">
                        <img src="<%= book.imageUrl || 'https://picsum.photos/seed/book-placeholder/300/450.jpg' %>"
                             alt="<%= book.title %>"
                             onerror="this.src='https://picsum.photos/seed/default-book/300/450.jpg'">
                    </div>

                    <div class="book-detail-info">
                        <h1 class="book-detail-title"><%= book.title %></h1>
                        <p class="book-detail-author">by <%= book.author %></p>

                        <div class="book-detail-meta">
                            <span class="book-genre"><%= book.genre %></span>
                            <% if (book.publishedDate) { %>
                                <span class="book-date">
                                    Published: <%= new Date(book.publishedDate).getFullYear() %>
                                </span>
                            <% } %>
                        </div>

                        <div class="book-detail-price">
                            <span class="price">$<%= book.price %></span>
                        </div>

                        <div class="book-detail-description">
                            <h3>Description</h3>
                            <p><%= book.description || 'No description available for this book.' %></p>
                        </div>

                        <div class="book-detail-actions">
                            <button class="btn btn-primary btn-large" onclick="addToCart('<%= book._id %>')">
                                <i class="fas fa-shopping-cart"></i> Add to Cart
                            </button>
                            <button class="btn btn-outline btn-large" onclick="addToWishlist('<%= book._id %>')">
                                <i class="fas fa-heart"></i> Add to Wishlist
                            </button>

                            <% if (typeof user !== 'undefined' && user && user.role === 'admin') { %>
                                <div class="admin-actions">
                                    <a href="/book/edit/<%= book._id %>" class="btn btn-warning">
                                        <i class="fas fa-edit"></i> Edit Book
                                    </a>
                                    <button class="btn btn-danger" onclick="deleteBook('<%= book._id %>')">
                                        <i class="fas fa-trash"></i> Delete Book
                                    </button>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>

                <!-- Reviews Section -->
                <div class="reviews-section mt-5">
                    <div class="reviews-container">
                        <h2 class="reviews-title">
                            <i class="fas fa-star"></i> Reviews & Ratings
                        </h2>

                        <% if (typeof error !== 'undefined' && error) { %>
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-circle"></i>
                                <%= error %>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        <% } %>

                        <!-- Add Review Form -->
                        <div class="add-review-card">
                            <h3 class="add-review-title">
                                <i class="fas fa-pen-fancy"></i> Share Your Review
                            </h3>
                            <form action="/review/books/<%= book._id %>/review" method="POST" class="needs-validation review-form" novalidate>
                                <div class="mb-3">
                                    <label for="rating" class="form-label">Rating <span class="text-danger">*</span></label>
                                    <select class="form-select" id="rating" name="rating" required>
                                        <option value="">Select a rating...</option>
                                        <option value="5">⭐⭐⭐⭐⭐ Excellent (5/5)</option>
                                        <option value="4">⭐⭐⭐⭐ Very Good (4/5)</option>
                                        <option value="3">⭐⭐⭐ Good (3/5)</option>
                                        <option value="2">⭐⭐ Fair (2/5)</option>
                                        <option value="1">⭐ Poor (1/5)</option>
                                    </select>
                                    <div class="valid-feedback">
                                        <i class="fas fa-check-circle"></i> Rating looks good!
                                    </div>
                                    <div class="invalid-feedback">
                                        <i class="fas fa-exclamation-circle"></i> Please select a rating.
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="comment" class="form-label">Your Review <span class="text-danger">*</span></label>
                                    <textarea class="form-control" id="comment" name="comment" rows="4" placeholder="Share your thoughts about this book..." required minlength="5" maxlength="500"></textarea>
                                    <small class="form-text text-muted">
                                        <span id="charCount">0</span>/500 characters
                                    </small>
                                    <div class="valid-feedback">
                                        <i class="fas fa-check-circle"></i> Your review looks good!
                                    </div>
                                    <div class="invalid-feedback">
                                        <i class="fas fa-exclamation-circle"></i> Please enter a review between 5-500 characters.
                                    </div>
                                </div>

                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-success btn-lg">
                                        <i class="fas fa-paper-plane"></i> Submit Review
                                    </button>
                                </div>
                            </form>
                        </div>

                        <!-- Display Reviews -->
                        <div class="reviews-list mt-4">
                            <h3 class="mb-4">
                                <i class="fas fa-comments"></i>
                                Reviews (<%= typeof book.reviews !== 'undefined' && book.reviews ? book.reviews.length : 0 %>)
                            </h3>

                            <% if (typeof book.reviews !== 'undefined' && book.reviews && book.reviews.length > 0) { %>
                                <div class="reviews-stats mb-4">
                                    <div class="avg-rating">
                                        <%
                                            const avgRating = book.reviews.reduce((sum, r) => sum + r.rating, 0) / book.reviews.length;
                                        %>
                                        <div class="rating-value"><%= avgRating.toFixed(1) %></div>
                                        <div class="rating-stars">
                                            <% for (let i = 0; i < 5; i++) { %>
                                                <i class="fas fa-star <%= i < Math.round(avgRating) ? 'filled' : '' %>"></i>
                                            <% } %>
                                        </div>
                                        <div class="rating-text">Average Rating</div>
                                    </div>
                                </div>

                                <% book.reviews.forEach(review => { %>
                                    <div class="review-item">
                                        <div class="review-header">
                                            <div class="review-user-info">
                                                <strong class="review-user">
                                                    <i class="fas fa-user-circle"></i>
                                                    <%= review.userId ? review.userId.username : 'Anonymous' %>
                                                </strong>
                                                <span class="review-date">
                                                    <%= new Date(review.createdAt).toLocaleDateString('en-US', {
                                                        year: 'numeric',
                                                        month: 'short',
                                                        day: 'numeric'
                                                    }) %>
                                                </span>
                                            </div>
                                            <div class="review-rating">
                                                <% for (let i = 0; i < 5; i++) { %>
                                                    <i class="fas fa-star <%= i < review.rating ? 'filled' : '' %>"></i>
                                                <% } %>
                                                <span class="rating-text">(<%= review.rating %>/5)</span>
                                            </div>
                                        </div>
                                        <p class="review-comment"><%= review.comment %></p>
                                        <% if (typeof user !== 'undefined' && user && (user.id === review.userId._id || user.role === 'admin')) { %>
                                            <div class="review-actions">
                                                <form method="POST" action="/review/<%= review._id %>?_method=DELETE" style="display: inline;">
                                                    <input type="hidden" name="bookId" value="<%= book._id %>">
                                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this review?');">
                                                        <i class="fas fa-trash-alt"></i> Delete
                                                    </button>
                                                </form>
                                            </div>
                                        <% } %>
                                    </div>
                                <% }); %>
                            <% } else { %>
                                <div class="no-reviews">
                                    <i class="fas fa-comment-slash"></i>
                                    <p>No reviews yet. Be the first to review this book!</p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <footer>
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>BookStore</h3>
                    <p>Your trusted online bookstore since 2024</p>
                </div>
                <div class="footer-section">
                    <h3>Quick Links</h3>
                    <ul>
                        <li><a href="/">Home</a></li>
                        <li><a href="/book/landing">Books</a></li>
                        <li><a href="/auth/login">Login</a></li>
                        <li><a href="/auth/register">Sign Up</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h3>Contact</h3>
                    <p>Email: info@bookstore.com</p>
                    <p>Phone: 1-800-BOOKS</p>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2024 BookStore. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Bootstrap form validation
        (() => {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach((form) => {
                form.addEventListener(
                    'submit',
                    (event) => {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    },
                    false
                );
            });
        })();

        // Character counter for review textarea
        document.getElementById('comment').addEventListener('input', function() {
            document.getElementById('charCount').textContent = this.value.length;
        });

        function addToCart(bookId) {
            const button = event.target.closest('button');
            const originalText = button.innerHTML;
            button.innerHTML = '<i class="fas fa-check"></i> Added to Cart!';
            button.classList.add('btn-success');

            setTimeout(() => {
                button.innerHTML = originalText;
                button.classList.remove('btn-success');
            }, 2000);

            console.log('Added to cart:', bookId);
        }

        function addToWishlist(bookId) {
            const button = event.target.closest('button');
            const originalText = button.innerHTML;
            button.innerHTML = '<i class="fas fa-check"></i> Added to Wishlist!';
            button.classList.add('btn-success');

            setTimeout(() => {
                button.innerHTML = originalText;
                button.classList.remove('btn-success');
            }, 2000);

            console.log('Added to wishlist:', bookId);
        }

        function deleteBook(bookId) {
            if (confirm('Are you sure you want to delete this book? This action cannot be undone. All reviews will also be deleted.')) {
                const button = event.target.closest('button');
                const originalText = button.innerHTML;
                button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Deleting...';
                button.disabled = true;

                fetch(`/book/${bookId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => {
                    if (response.ok) {
                        return response.json();
                    } else {
                        throw new Error('Failed to delete book');
                    }
                })
                .then(data => {
                    alert('Book deleted successfully!');
                    window.location.href = '/book/landing';
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error deleting book. You may not have permission to perform this action.');
                    button.innerHTML = originalText;
                    button.disabled = false;
                });
            }
        }
    </script>

